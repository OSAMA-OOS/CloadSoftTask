@model IEnumerable< Employee_Documents.Models.Entities.EmployeeFile>

@{
    ViewData["Title"] = "Index";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
@if (ViewBag.successMessage != null)
{
    <div class="alert alert-success">@ViewBag.successMessage</div>
}

<h2>Employee Files</h2>

<table class="table table-striped">
    
        <tr>
            <th>Employee Name</th>
            <th>File Name</th>
            <th>URL</th>
            <th>Image</th>
            <th>
            Delete
            </th>

        </tr>
   
   
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Employee.Name</td>
                <td>@item.File.Name</td>
                <td>@item.URL</td>
                <td>
                    <img src="~/FilesImages/@item.URL" class="rounded-circle" height="40" width="40" />
                </td>
                <td>
                <a class="btn btn-outline-primary"
               asp-action="Delete"
               asp-controller="Report"
               asp-route-empId="@item.EmployeeId"
               asp-route-fileid="@item.FileId">
                    Delete
                </a>


                </td>
            </tr>
        }
       
        <br />
  
</table>
<div class="row justify-content-center">
    <a asp-action="GenerateReport" class="btn btn-outline-primary col-6  m-1" role="button"> <i class="bi bi-file-earmark-pdf-fill"></i> Generate Report</a>
</div>
