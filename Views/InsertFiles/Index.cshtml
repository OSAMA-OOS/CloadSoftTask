@model Employee_Documents.ViewModel.InsertFiles.EmployeeFileVIewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
@if (ViewBag.successMessage != null)
{
    <div class="alert alert-success">@ViewBag.successMessage</div>
}

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Insert" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="EmployeeId" class="control-label"></label>
            <div class="form-outline mb-4">
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeesID"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <label asp-for="FileId" class="control-label"></label>
            <div class="form-outline mb-4">
                <select asp-for="FileId" class="form-control" asp-items="ViewBag.FilesID"></select>
                <span asp-validation-for="FileId" class="text-danger"></span>
            </div>

            <label asp-for="UploadedFile" class="control-label">Choose a file:</label>
            <div class="form-outline mb-4">
                <input type="file" name="UploadedFile" class="form-control" />
                <span asp-validation-for="UploadedFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Insert" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
