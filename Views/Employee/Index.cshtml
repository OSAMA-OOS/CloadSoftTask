@model IEnumerable<Employee_Documents.Models.Entities.Employee>
@{
	ViewBag.Title = "Index";
}
<div class="container">
    <h1>All Empolyees</h1>
    <table class="table  table-striped">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Employee" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">Delete</a>
                </td>                
            </tr>
        }
    </table>
    <a class="btn btn-outline-primary w-100 " asp-action="Create" asp-controller="Employee">Add New Employee</a>
</div>
