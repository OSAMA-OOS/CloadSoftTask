@model IEnumerable<Employee_Documents.Models.Entities.File>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h1>All Files</h1>
    <table class="table  table-striped">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="File" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Delete" asp-controller="File" asp-route-id="@item.Id">Delete</a>
                </td>
              
            </tr>
        }
    </table>
    <a class="btn btn-outline-primary h1 w-100 " asp-action="Create" asp-controller="File">Add New File</a>
</div>
